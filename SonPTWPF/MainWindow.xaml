<Window x:Class="SonPTWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="btnCustomerInfo" 
                    Content="Customer Info" 
                    Width="150" 
                    Height="40" 
                    Margin="0,10,0,0" 
                    Click="btnCustomerInfo_Click"/>

            <Button x:Name="btnRoomInfo" 
                    Content="Room Info" 
                    Width="150" 
                    Height="40" 
                    Margin="0,10,0,0" 
                    Click="btnRoomInfo_Click"/>
            <Button x:Name="btnBookingInfo" 
                    Content="Booking Info" 
                    Width="150" 
                    Height="40" 
                    Margin="0,10,0,0" 
                    Click="btnBookingInfo_Click"/>
        </StackPanel>
    </Grid>
</Window>