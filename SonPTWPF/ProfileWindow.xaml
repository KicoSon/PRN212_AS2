<Window x:Class="SonPTWPF.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProfileWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Profile Information"
                       FontSize="24" 
                       Margin="0,0,0,20"/>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Full Name:" Margin="5"/>
                <TextBox x:Name="txtFullName" Width="200" Margin="5"/>
                <TextBlock Text="Email Address:" Margin="5"/>
                <TextBox x:Name="txtEmail" Width="200" Margin="5" IsEnabled="False"/>
                <TextBlock Text="Telephone:" Margin="5"/>
                <TextBox x:Name="txtTelephone" Width="200" Margin="5"/>
                <TextBlock Text="Birthday:" Margin="5"/>
                <DatePicker x:Name="dpBirthday" Width="200" Margin="5"/>
                <TextBlock Text="Password:" Margin="5"/>
                <PasswordBox x:Name="txtPassword" Width="200" Margin="5"/>
                <Button Content="Save" Width="100" Margin="5" Click="btnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>